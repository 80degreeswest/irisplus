<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/fragmentStyle"
    tools:context=".IrisActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    
        <RelativeLayout
            android:id="@+id/care_swipe_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            tools:ignore="MergeRootFrame" >

            <ToggleButton
                android:id="@+id/care_status"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textOn="Alerts On"
                android:textOff="Alerts Off"
                android:gravity="center"
                android:layout_marginBottom="0dp"
                android:background="@color/irisplusnavy"/>

            <TextView
                android:id="@+id/care_state_heading"
                android:layout_below="@+id/care_status"
                android:text="State"
                style="@style/dashboardHeader">
            </TextView>

            <TextView
                android:id="@+id/care_state_content"
                android:layout_below="@+id/care_state_heading"
                style="@style/dashboardContent">
            </TextView>

            <TextView
                android:id="@+id/care_alarmed_heading"
                android:text="Alarmed"
                android:layout_below="@+id/care_state_content"
                style="@style/dashboardHeader">
            </TextView>

            <TextView
                android:id="@+id/care_alarmed_content"
                android:layout_below="@+id/care_alarmed_heading"
                style="@style/dashboardContent">
            </TextView>

            <TextView
                android:id="@+id/care_time_heading"
                android:text="Last Triggered"
                android:layout_below="@+id/care_alarmed_content"
                style="@style/dashboardHeader">
            </TextView>

            <TextView
                android:id="@+id/care_time_content"
                android:layout_below="@+id/care_time_heading"
                style="@style/dashboardContent">
            </TextView>

            <TextView
                android:id="@+id/care_devices_heading"
                android:text="Devices Triggered"
                android:layout_below="@+id/care_time_content"
                style="@style/dashboardHeader">
            </TextView>

            <TextView
                android:id="@+id/care_devices_content"
                android:layout_below="@+id/care_devices_heading"
                style="@style/dashboardContent">
            </TextView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
