<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <TextView android:id="@+id/appwidget_text" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" android:text="@string/appwidget_text"
        android:textColor="#ffffff" android:textSize="24sp" android:textStyle="bold|italic"
        android:layout_margin="8dp" android:contentDescription="@string/appwidget_text"
        android:background="#09C"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/widget_thermostat_layout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_thermostat_main">

        <Button
            android:id="@+id/widget_thermostat_btn_up"
            android:layout_width="36dp"
            android:layout_height="26dp"
            android:background="@drawable/ic_arrow_blue_up"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"/>

        <Button
            android:id="@+id/widget_thermostat_btn_down"
            android:layout_width="36dp"
            android:layout_height="26dp"
            android:background="@drawable/ic_arrow_blue_down"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="158dp"/>

        <TextView
            android:id="@+id/widget_thermostat_current_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textSize="40sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/widget_thermostat_target_and_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="10sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/widget_thermostat_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="10sp"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>